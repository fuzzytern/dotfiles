########################
# Tips to configure i3 can be found in the Code Cast youtube tutorial
#
###

## Constants definitions
set $mod Mod4
# Colors
set $base00 #101218
set $base01 #1f222d
set $base02 #252936
set $base03 #7780a1
set $base04 #C0C5CE
set $base05 #d1d4e0
set $base06 #C9CCDB
set $base07 #ffffff
set $base08 #ee829f
set $base09 #f99170
set $base0A #ffefcc
set $base0B #a5ffe1
set $base0C #97e0ff
set $base0D #97bbf7
set $base0E #c0b7f9
set $base0F #fcc09e
# Workspaces
set $workspace1 "1: Web "
set $workspace2 "2: Code "
set $workspace3 "3: Terms "
set $workspace4 "4: Wild "
set $workspace5 "5: Wild "
set $workspace6 "6: Wild "
set $workspace7 "7: Wild "
set $workspace8 "8: Tea "
set $workspace9 "9: Chat "
set $workspace10 "10: Sys "

## Workspace-specific apps
assign [class="chromium"] $workspace1
assign [class="Alacritty"] $workspace3
# Make some apps launch when i3 first starts
exec chromium --process-per-site
exec alacritty
exec alacritty
exec --no-startup-id nm-applet
exec --no-startup-id "sleep 2s & kalu"
#exec --no-startup-id fcitx -d
exec --no-startup-id ibus-daemon --xim -d -r

## General Configuration
font pango:Hack 11
floating_modifier $mod
hide_edge_borders both
new_window none

## Application keybindings
# kill focused window
bindsym $mod+Shift+b kill
bindsym $mod+Return exec alacritty
bindsym $mod+i exec dmenu_run -nb black -sb tomato -l 10
bindsym $mod+Shift+l exec i3lock
bindsym $mod+Shift+p exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Floating windows
for_window [class="Pavucontrol"] floating enable
for_window [class="Kalu"] floating enable

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# pulseaudio bindings
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
# brightness adjustments
bindsym XF86MonBrightnessUp exec "xbacklight + 5"
bindsym XF86MonBrightnessDown exec "xbacklight - 5"


## i3 keybindings
# change focus
bindsym $mod+c focus left
bindsym $mod+t focus down
bindsym $mod+s focus up
bindsym $mod+r focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
# move focused window
bindsym $mod+Shift+c move left
bindsym $mod+Shift+t move down
bindsym $mod+Shift+s move up
bindsym $mod+Shift+r move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
# split in horizontal orientation
bindsym $mod+h split h
# split in vertical orientation
bindsym $mod+v split v
# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
# change container layout (stacked, tabbed, toggle split)
bindsym $mod+u layout stacking
bindsym $mod+eacute layout tabbed
bindsym $mod+p layout toggle split
# toggle tiling / floating
bindsym $mod+e floating toggle
# change focus between tiling / floating windows: FIXME: doesn't work?
bindsym $mod+space focus mode_toggle
# focus the parent container
bindsym $mod+a focus parent
# switch to workspace
bindsym $mod+quotedbl workspace $workspace1
bindsym $mod+guillemotleft workspace $workspace2
bindsym $mod+guillemotright workspace $workspace3
bindsym $mod+parenleft workspace $workspace4
bindsym $mod+parenright workspace $workspace5
bindsym $mod+at workspace $workspace6
bindsym $mod+plus workspace $workspace7
bindsym $mod+minus workspace $workspace8
bindsym $mod+slash workspace $workspace9
bindsym $mod+asterisk workspace $workspace10
# move focused container to workspace
bindsym $mod+Shift+quotedbl move container to workspace $workspace1
bindsym $mod+Shift+guillemotleft move container to workspace $workspace2
bindsym $mod+Shift+guillemotright move container to workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4
bindsym $mod+Shift+5 move container to workspace $workspace5
bindsym $mod+Shift+at move container to workspace $workspace6
bindsym $mod+Shift+plus move container to workspace $workspace7
bindsym $mod+Shift+minus move container to workspace $workspace8
bindsym $mod+Shift+slash move container to workspace $workspace9

bindsym $mod+Shift+asterisk move container to workspace $workspace10
# reload the configuration file
bindsym $mod+Shift+x reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+o restart
mode "  " {
  bindsym c resize shrink width 2 px or 2 ppt
  bindsym t resize grow height 2 px or 2 ppt
  bindsym s resize shrink height 2 px or 2 ppt
  bindsym r resize grow width 2 px or 2 ppt
  bindsym Left resize shrink width 2 px or 2 ppt
  bindsym Down resize grow height 2 px or 2 ppt
  bindsym Up resize shrink height 2 px or 2 ppt
  bindsym Right resize grow width 2 px or 2 ppt
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+o mode "  "

## i3bar
bar {
  colors {
    separator $base03
    background $base01
    statusline $base05
#                      border  background text
    focused_workspace  $base01 $base01    $base07
    active_workspace   $base01 $base02    $base03
    inactive_workspace $base01 $base01    $base03
    urgent_workspace   $base01 $base01    $base08
  }
  status_command i3status
}

## Colors
# class                   border  backgr. text    indicator
  client.focused          $base01 $base01    $base07 $base0F
  client.focused_inactive $base02 $base02    $base03 $base0F
  client.unfocused        $base02 $base02    $base03 $base0F
  client.urgent           $base02 $base08    $base00 $base0F

